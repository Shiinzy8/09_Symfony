{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <p>ID {{ id }}</p>
    <h3>{{ post.title|upper}}</h3>
    <p>{{ post.text }}</p>
    {% if post.date is defined %}
        <p>{{ post.date|date('H:i:s') }}</p>
    {% endif %}
    <p>{{ 5600000|price }}</p>
    {# здесь переменная locale хранится в файле services.yaml и проброшена как параметр сервиса #}
    {# и указана как параметр конструктора src/Twig/AppExtension.php #}
    <p>Here is current locale {{ locale }}</p>
    {# здесь переменная message задана через параметр в файле packages/twign.yaml (настройки twiga) #}
    {# который берет переменную из файла services.yaml hello_message #}
    <p>Here is current message {{ message }}</p>

    {# эти параметры доступны по умолчанию, их нигде пробрасывать не надо #}
    {# посмотреть список всех таких переменных можно в /vendor/symfony/twig-bridge/AppVariable.php #}
    <p>Env: {{ app.environment }}</p>
    <p>User: {{ app.user }}</p>
    <p>Request: {{ app.request }}</p>
    <p>Session started: {{ app.session.isStarted() }}</p>
    <p>Debug: {{ app.debug }}</p>
{% endblock %}