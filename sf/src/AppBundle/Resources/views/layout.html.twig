<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title> {% block title %}Welcome!{% endblock %} </title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('/bundles/app/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ asset('/bundles/app/css/style.css') }}" rel="stylesheet">
</head>

<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') or is_granted('ROLE_USER') %}
                <a class="navbar-brand" href="{{ path('admin_test') }}">Project name</a>
            {% else %}
                <a class="navbar-brand" href="{{ path('test') }}">Project name</a>
            {% endif %}
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
                    <li {% if path(app.request.attributes.get('_route')) starts with 'home' %} class="active" {% endif %}><a href="{{ path('admin_homepage') }}">Home</a></li>
                    <li {% if path(app.request.attributes.get('_route')) starts with 'item' %} class="active" {% endif %}><a href="{{ path('admin_item_list') }}">Items</a></li>
                    <li {% if path(app.request.attributes.get('_route')) starts with 'security' %} class="active" {% endif %}><a href="{{ path('security_logout') }}">Logout ({{ app.user.login }})</a></li>
                {% else %}

                    <li {% if path(app.request.attributes.get('_route')) starts with 'home' %} class="active" {% endif %}><a href="{{ path('homepage') }}">Home</a></li>
                    <li {% if path(app.request.attributes.get('_route')) starts with 'item' %} class="active" {% endif %}><a href="{{ path('item_list') }}">Items</a></li>
                    <li {% if path(app.request.attributes.get('_route')) starts with 'security' %} class="active" {% endif %}><a href="{{ path('security_login') }}">Login</a></li>

                {% endif %}
                <li><a href="#">Contact</a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container" style="margin-top: 20px">

    <div>
        {% for flash_message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
        {% endfor %}
    </div>

    {% block body %}{% endblock %}

</div><!--/.container -->

<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ asset('/bundles/app/js/jquery.min.js') }}"></script>
<script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
<script src="{{ asset('/bundles/app/js/bootstrap.min.js') }}"></script>
</body>
</html>
